<script language="JavaScript" type="text/javascript">
  $(document).ready(function(){
    $('.carousel').carousel({
      interval: 3000
    })
  });   
  $('.carousel-control.left').click(function(e) {
	  e.stopPropagation();
	  $('.js-carousel').carousel('prev');
	  return false;
	});

	$('.carousel-control.right').click(function(e) {
	  e.stopPropagation();
	  $('.js-carousel').carousel('next');
	  return false;
	}); 
</script>
