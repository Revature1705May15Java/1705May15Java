<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Hand Typed JSON With AJAX</title>
</head>
<body>
	<button id="myBtn">Cluck Here</button>
	<div id="stuff"></div>
	
	<script>
		var myPerson;

		function handleEvent(){
			var xhr = XMLHttpRequest();
			xhr.onreadystatechange = function(){
				if(xhr.readyState==4 && xhr.status==200){
					var person = JSON.parse(xhr.responseText);
					myPerson = person;
					document.getElementById("stuff").innerHTML = person.name;
				}
			}
			xhr.open("GET", "getJSON", true);
			xhr.send();
		}
		document.getElementById("myBtn").addEventListener("click", handleEvent, false);
		

	</script>

</body>
</html>