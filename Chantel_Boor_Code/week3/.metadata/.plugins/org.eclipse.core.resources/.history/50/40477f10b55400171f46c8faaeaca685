package com.ers.servlets;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import com.ers.pojos.Employee;
import com.ers.service.Service;

/**
 * Servlet implementation class resolve
 */
@WebServlet("/resolve")
public class resolve extends HttpServlet {
	private static final long serialVersionUID = 1L;
       

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException 
	{
		HttpSession sess = request.getSession(true);
		Service s = new Service ();
		Employee e = (Employee)sess.getAttribute("user");
		
		//get user input
		int id = Integer.parseInt(request.getParameter("id"));
		String note = request.getParameter("note");
		String stat = request.getParameter("stat");
		
		sess.setAttribute("user", e);
		request.setAttribute("name", e.getfName() + " " + e.getlName());
		request.getRequestDispatcher("mHomeDataTable.ftl").forward(request, response);
		
	}

}
