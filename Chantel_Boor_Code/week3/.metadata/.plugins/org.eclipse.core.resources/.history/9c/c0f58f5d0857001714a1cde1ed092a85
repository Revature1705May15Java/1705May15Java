package com.ers.servlets;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import com.ers.pojos.Employee;
import com.ers.service.Service;

/**
 * Servlet implementation class goProfile
 */
@WebServlet("/goProfile")
public class goProfile extends HttpServlet 
{
	private static final long serialVersionUID = 1L;
	static Employee e = new Employee();
	static Service service = new Service();   

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException
	{
		HttpSession sess = request.getSession(true);
		Service s = new Service ();
		e = (Employee)sess.getAttribute("user");
		
		
		//make request and send back to e home
		request.setAttribute("name", e.getfName() + " " + e.getlName());
		request.setAttribute("emai", e.getEmail());
		request.getRequestDispatcher("profile.ftl").forward(request, response);
	}

}
