	<script>



$('#add').on('click',function() {
	
	var item = document.createElement('li');
	
	item.innerHTML = $('#addList').val();
	$('#addList').val('');
	
	$('#todo').append(item);
	
	
	$('li').on('click',function(){
		
		$(this).remove()
	});
});

$('li').on('click',function(){
	$('#done').append(this);
	$(this).remove()
});

