// is mouse over ryu?
var isHoovered = false;

$(document).ready(function() {
	
	
	$('.ryu').mouseenter(function (){
		
		$('.ryu-still').hide();
		$('ryu-ready').show();
		isHoovered = true;
		
	})
	
	.mouseleave (function (){
		
		$('.ryu-still').show();
		$('ryu-ready').hide();
		isHoovered = false;
	})
	
	
});