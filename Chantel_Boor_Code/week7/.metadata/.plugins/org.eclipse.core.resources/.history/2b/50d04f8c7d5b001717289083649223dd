<body ng-app="calcApp" ng-controller="calcCtrl">

Num 1: <input type="text" ng-model="num1" >
Num 2: <input type="text" ng-model="num2" >
<button ng-click="addNums(num1,num2)">Add</button>

<table class = "table-striped">
<thead>
	<tr>
		<th style="padding-right:20px">Num 1</th>
		<th style="padding-right:20px">Num 2</th>
		<th style="padding-right:20px">OP</th>
		<th style="padding-right:20px">Result</th>
	</tr>
</thead>
<tbody>

	<tr ng-repeat= "item in calc.items">
		<td>{{item.num1}}</td>
		<td>{{item.num2}}</td>
		<td>{{item.op}}</td>
		<td>{{item.result}}</td>
	</tr>

</tbody>

</table>




<script>

var model = {
		items : []
}

var calcApp = angular.module("calcApp",[]);


return function(items){
	var resultArr = [];

	angular.forEach(items , function(item){

			resultArr.push(item);
	}
	);

		return resultArr;
	
}}
);


calcApp.controller("calcCtrl",function($scope){

$scope.calc = model;

$scope.addNums = function (num1,num2){

	$scope.calc.items.push({
			num1 : num1,
			num2 : num2
			op : "add"
			result : num1 + num2
		});

}
	
}

</script>

</body>
