Merge Sort
<input type="number" ng-model="newNum">
<button ng-click="addItem(newNum)">Add to list</button>
<button ng-click="mergeSort()">Add to list</button>

Unsorted
<ul>

	<li ng-repeat = "item in sort.items">
		{{item.num}}
	</li>

</ul>

Merge Sorted
<ul>

	<li ng-repeat = "item in sort.sorted">
		{{item.num}}
	</li>

</ul>

<script>

var model = { items : [], sorted : []};

var sortApp = angular.module("sortApp",[]);

sortApp.controller("sortCtrl", function($scope){
	
	$scope.sort = model;

	$scope.addItem = function (newNum){
		
		$scope.sort.items.push({ num : newNum });

	}
	
	$scope.mergeSort = function()
	{

		var unsorted;

		angular.forEach(items , function(item)
		{
				resultArr.push(item.num);

		}
		);

		console.log(unsorted);
		function mergeSort(arr)
		{
		    if (arr.length < 2)
		        return arr;
		 
		    var middle = parseInt(arr.length / 2);
		    var left   = arr.slice(0, middle);
		    var right  = arr.slice(middle, arr.length);
		 
		    return merge(mergeSort(left), mergeSort(right));
		}
		 
		function merge(left, right)
		{
		    var result = [];
		 
		    while (left.length && right.length) {
		        if (left[0] <= right[0]) {
		            result.push(left.shift());
		        } else {
		            result.push(right.shift());
		        }
		    }
		 
		    while (left.length)
		        result.push(left.shift());
		 
		    while (right.length)
		        result.push(right.shift());
		 
		    return result;
		}

		var mergeSorted = mergeSort(unsorted);

		$scope.sort.sorted = mergeSorted;
	}


});

</script>

