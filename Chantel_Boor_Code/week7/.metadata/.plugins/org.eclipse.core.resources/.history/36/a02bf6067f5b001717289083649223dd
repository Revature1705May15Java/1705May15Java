<body ng-app="calcApp" ng-controller="calcCtrl">



<input type="text" ng-model="actionText">
<button ng-click="addNewItem(actionText)">Add</button>

<table class = "table-striped">
<thead>
	<tr>
		<th style="padding-right:20px">Description</th>
		<th>Done</th>
	</tr>
</thead>
<tbody>

	<tr ng-repeat= "item in calc items | checkedItems:showComplete">
		<td style="padding-right:20px">{{item.action}}</td>
		<td> <input type="checkbox" ng-model="item.done"></td>
		<td>{{item.done}}</td>
	</tr>

</tbody>

</table>

<label> <input type="checkbox" ng-model="showComplete"> Show Complete</label>

<script>

var model = {
		items : [
			]
};

var calcApp = angular.module("calcApp",[]);


todoApp.filter("checkedItems",function(){

	return function(items, showComplete){
		var resultArr = [];

		angular.forEach(items , function(item){
			if(item.done==false || showComplete == true)
				{
				resultArr.push(item);
				}
		}
		);

			return resultArr;
		
	}}
	);

calcApp.controller("calcCtrl",function($scope){
	$scope.calc = model;

	$scope.addNewItem = function (actionText){

			$scope.calc.items.push({
					action : actionText,
					done : false
				});

		}
});

</script>

