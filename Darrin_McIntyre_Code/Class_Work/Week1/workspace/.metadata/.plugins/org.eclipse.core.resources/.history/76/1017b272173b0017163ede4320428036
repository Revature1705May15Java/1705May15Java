package palindromes;

import java.util.ArrayList;

public class palindromes {

	public static void main(String[] args) {
//		Write a program that stores the following strings in an ArrayList and saves all the palindromes in another ArrayList.
//		“karan”, “madam”, ”tom”, “civic”, “radar”, “sexes”, “jimmy”, “kayak”, “john”,  “refer”, “billy”, “did”
		ArrayList<String> palindromes = new ArrayList<String>();
		ArrayList<String> words = new ArrayList<String>();
		words.add("karan");
		words.add("madam");
		words.add("tom");
		words.add("civic");
		words.add("radar");
		words.add("sexes");
		words.add("jimmy");
		words.add("kayak");
		words.add("refer");
		words.add("billy");
		words.add("did");
		
		System.out.println("Not palindromes: ");
		for(int i = 0; i < words.size(); i++){
			if(isPalindrome(words.get(i))) palindromes.add(words.get(i));
		}
		
		System.out.print("\n\nPalindromes: ");
		for(int i = 0; i < palindromes.size(); i++){
			System.out.print(palindromes.get(i) + ", ");
		}
		System.out.println();
	}
	
	static boolean isPalindrome(String s){
		if(s.equals(new StringBuffer(s).reverse().toString())) return true;
		
		System.out.print(s + ", ");
		return false;
	}

}
