package bubbleSort;

public class bubbleSort {
	public static void main(String[] args){
		int[] something = {1,2,1,3,4};
		sort(something);
		
	}
	
	public static void sort(int[] A){
		int length = A.length;
		boolean swap = true;

		System.out.print("Before bubbleSort: ");
		for(int j = 0; j < length; j++)System.out.print(A[j] + " ");
		
		System.out.println("");
		
		while(swap){
			swap = false;
			for(int i = 1; i < length; i++){
				if(A[i-1] > A[i]){
					int temp = A[i-1];
					A[i-1] = A[i];
					A[i] = temp;
					swap = true;
				}
			}
		}
		
		System.out.print("After bubbleSort: ");
		for(int j = 0; j < length; j++)System.out.print(A[j] + " ");
		
	}
}
