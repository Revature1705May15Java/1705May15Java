package com.ex.lambdas;

public class Maths {
	public static void main(String[] args) {
		
	
	
	
	
	Maths m = new Maths();
	MathOperation addition = (int a, int b)-> a + b;
	MathOperation subtraction = (int a, int b) -> a - b;
	VarArgsOps multiply = (int[] x) -> {
		int product = 1;
		for(int i:x){
			product = product*i;
		}
		return product;
	};
	
	
	int sum = m.operate(addition, 5, 10);
	System.out.println(sum);
	}
	
	
private int operate(MathOperation op, int a, int b){
	return op.operation(a, b);
}
private int operate(MathOperation op, int... ints){
	return op.operation();
}
}
interface MathOperation{
	int operation(int a, int b);
}
interface VarArgsOps{
	int opreation(int... args);
}