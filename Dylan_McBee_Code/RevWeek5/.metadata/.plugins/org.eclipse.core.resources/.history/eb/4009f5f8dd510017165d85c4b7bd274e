package com.ex.dao;

import javax.transaction.Transaction;

import org.hibernate.Session;

public class DaoImpl {

	
	public void addPerson(Person p){
		Session session = ConnectionUtil.getSession();
		try{
			Transaction tx = session.beginTransaction();
			session.save(p);
			tx.commit();
		}
		finally{
			session.close();
		}
	}
}
