<!--  The app -->
<body ng-app="todoApp" ng-controller="ToDoCtrl">


		
		<h1>Hey, {{ todo.user }}</h1>
		
		<input type="number" ng-model="actionText"/>
		<input type="number" ng-model="actionText2"/>
		<button ng-click="add(actionText, actionText2)" >Add</button>
		<button ng-click="subtract(actionText, actionText2)">Subtract</button>
		<button ng-click="multipy(actionText, actionText2)">Multiply</button>
		<button ng-click="divide(actionText, actionText2)">Divide</button>
	<table class="table table-striped">
	<thead>
		<tr>
			<th>Num1</th>
			<th>Num2</th>
			<th>Operand</th>
			<th>Result</th>
		
		</tr>
		</thead>
		<tbody>
			<tr ng-repeat="calculation in todo.calculations">
			<td>{{calculation.num1}}</td>
			<td>{{calculation.num2}}</td>
			<td>{{calculation.operand}}</td>
			<td>{{calculation.result}}</td>
			
			</tr>
		
		</tbody>
	
	</table>
	


	<script>

	var model= {
		user : "Dylan",
		calculations : [
	{num1:"",num2:"",operand:"", result:""},
			]
			};
	
	var todoApp = angular.module("todoApp", []);

	todoApp.filter("checkedItems", function(){

		return function(calculations){
			var resultArray = [];
			angular.forEach(items, function(item){
			if(item.done==false || showComplete==true){
				resultArray.push(item);
			}
				});
				return resultArray;
		

		}});
		
	todoApp.controller("ToDoCtrl",function($scope){
		$scope.todo = model;


			$scope.add = function(actionText,actionText2){
				$scope.todo.calculations.unshift({
					num1 : actionText,
					num2 : actionText2,
					operand : "Addition",
					result : actionText + actionText2
					});


				}

			$scope.subtract = function(actionText,actionText2){
				$scope.todo.calculations.unshift({
					num1 : actionText,
					num2 : actionText2,
					operand : "Subtraction",
					result : actionText - actionText2

					});



				}
			$scope.multiply = function(actionText,actionText2){
				$scope.todo.calculations.unshift({
					num1 : actionText,
					num2 : actionText2,
					operand : "Multiplication",
					result : actionText * actionText2

					});



				}
			$scope.divide = function(actionText,actionText2){
				$scope.todo.calculations.unshift({
					num1 : actionText,
					num2 : actionText2,
					operand : "Division",
					result : actionText/actionText2

					});



				}

	});
		

</script>
