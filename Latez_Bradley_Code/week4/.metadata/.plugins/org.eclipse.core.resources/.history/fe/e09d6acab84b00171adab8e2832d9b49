//is mouse over RYU
var isHovered = false;

$(document).ready(function(){
	//Upon the document being ready do this function
	
	$('.ryu').mouseenter(function(){
		$('.ryu-still').hide();
		$('.ryu-show').show();
		isHovered=true;	
	})
	
	.mouseleave(function(){
		$('.ryu-still').show();
		$('.ryu-show').hide();
		isHovered=false;
	})
	
	.mousedown(function(){
		playHadouken();
		$('.ryu-throwing').show();
		$('.ryu-ready').hide();
		$('.haduken').finish().show.animate(
				{'left':'8.75rem'},280,)
	})
	

	
});

function playHadouken(){
	$('#')
	
}