<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Reimbursement</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>freemarker</servlet-name>
		<servlet-class>freemarker.ext.servlet.FreemarkerServlet</servlet-class>
		<init-param>
			<param-name>TemplatePath</param-name>
			<param-value>/</param-value>
		</init-param>
		<init-param>
			<param-name>NoCache</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>ContentType</param-name>
			<param-value>text/html; charset=UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>template_update_delay</param-name>
			<param-value>0</param-value>
		</init-param>
		<init-param>
			<param-name>default_encoding</param-name>
			<param-value>ISO-8859-1</param-value>
		</init-param>
		<init-param>
			<param-name>number_format</param-name>
			<param-value>0.##########</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>freemarker</servlet-name>
		<url-pattern>*.ftl</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.reim.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>EmplyeeHome</servlet-name>
		<servlet-class>com.reim.servlets.EmployeeServletHome</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EmplyeeHome</servlet-name>
		<url-pattern>/employeeHome</url-pattern>
	</servlet-mapping>
		<servlet>
		<servlet-name>ManagerHome</servlet-name>
		<servlet-class>com.reim.servlets.ManagerServletHome</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ManagerHome</servlet-name>
		<url-pattern>/managerHome</url-pattern>
	</servlet-mapping>
	
	  <servlet>
    <servlet-name>updateInfo</servlet-name>
    <servlet-class>com.reim.servlets.EmployeeServletsUpdate</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateInfo</servlet-name>
    <url-pattern>/updateInfo</url-pattern>
  </servlet-mapping>
  
	  <servlet>
    <servlet-name>updateManager</servlet-name>
    <servlet-class>com.reim.servlets.ManagerServletUpdate</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateManager</servlet-name>
    <url-pattern>/updateManager</url-pattern>
  </servlet-mapping>
  
  	  <servlet>
    <servlet-name>managerApprove</servlet-name>
    <servlet-class>com.reim.servlets.ManagerServletApprove</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>managerApprove</servlet-name>
    <url-pattern>/managerApprove</url-pattern>
  </servlet-mapping>
  
  
    	  <servlet>
    <servlet-name>managerDeny</servlet-name>
    <servlet-class>com.reim.servlets.ManagerServletDeny</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>managerDeny</servlet-name>
    <url-pattern>/managerDeny</url-pattern>
  </servlet-mapping>
  
		  <servlet>
    <servlet-name>newReq</servlet-name>
    <servlet-class>com.reim.servlets.newReqEmployeeServlets</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>newReq</servlet-name>
    <url-pattern>/newReq</url-pattern>
  </servlet-mapping>
</web-app>