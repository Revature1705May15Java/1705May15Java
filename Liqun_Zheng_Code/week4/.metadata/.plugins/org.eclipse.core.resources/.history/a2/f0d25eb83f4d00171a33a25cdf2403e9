	<script type="text/javascript">
    //TODO: Javascript homework
    
        
			//1. USA
			//Define function getUSA()
			//Find the html element that contains "USA".
			//Print that element's contents.
	

			function getUSA() {
				var ele = document.body.getElementsByTagName("*");
				for ( let x in ele) {
					if (ele[x].textContent == 'USA') {
						alert("Called getUSA method " +ele[x] + " content: " + ele[x].textContent);
					}
				}
			}
			getUSA();
			
			//2. Sales
			//Define function getPeopleInSales()
			//Print the names of all the people in the sales department.
			function getPeopleInSales(){
				var table = document.getElementById('employee');
				var rows = table.getElementsByTagName('tr');
                for (let row in rows){
                	var emp = row.childNodes;
                	var name = emp[1].textContent;
                	var dep = emp[3].textContent;
                	if(dep === 'Sales'){
                		console.log(name + ' work in Sales');
                	}
                	
                }
				
			}
			
			getPeopleInSales();
			
			
			
			
