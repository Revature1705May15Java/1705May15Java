<body ng-controller="calCtrl">

	<p>Num1: </p>
	<input type ="text" ng-model="num1"/>
	<p>Num2: </p>
	<input type ="text" ng-model="num2"/>
	<button ng-click="add(num1,num2)">Add</button>

	
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Num1()</th>
				<th>Num2()</th>
				<th>Operation</th>
				<th>Result</th>
			</tr>
		</thead>
		<tbody>
			<tr ng-repeat="item in cal.items " >
				<td>{{item.number1}}</td>
				<td>{{item.number2}}</td>
				<td>{{item.operation}}</td>
				<td>{{item.result}}</td>
			</tr>
		</tbody>
	</table>
	
	
	<script>

		var todoApp = angular.module("calApp", []);
		var model = {
				items : [ 
				]
			};
		todoApp.controller("calCtrl", function($scope) {

			$scope.todo = model;
			$scope.add = function(num1,num2){
				$scope.cal.items.unshift({
					number1 : num1,
					number2 : num2,
					operation : 'Addition',
					result : (num1+num2);
				});
			}
		});
	</script>
