package com.challenges;
import java.util.ArrayList;

public class Challenge1 {
//	public static boolean isCompleted=false;
	public static ArrayList<Double> choppedNums=new ArrayList<Double>();
	public static double flooredOut=0;
	
	public static void chopSquares(double num){
		double floored=Math.floor(Math.sqrt(num));
		if(floored>1){
			choppedNums.add(floored);
			flooredOut=flooredOut+floored;
			System.out.println("added to arraylist");
		}else{
			for(int i=0;i<(num-flooredOut);i++){
				choppedNums.add((Double) 1.0);
				flooredOut++;
				System.out.println("added 1 to arraylist");
//				if(i==(num-flooredOut-1)){
////					isCompleted=true;
//					System.out.println("done");
//				}
			}
		}		
		if((num-flooredOut)!=0){
			chopSquares(num-flooredOut);
			System.out.println("looped");
		}else{
			System.out.println("ended");
			flooredOut=0;
		}
	} 
	public static void main(String[] args) {
		chopSquares(26);
		System.out.println(choppedNums.get(1));
	}
}
