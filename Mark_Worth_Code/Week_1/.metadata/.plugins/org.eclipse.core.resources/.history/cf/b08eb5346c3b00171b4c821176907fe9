
package com.google.challenges; 

public class Answer {   
	public static int numOfRoots=0;
    public static int[] answer(int area) {
    	int[] Solution=new int[numOfRoots];
    	if(area>0){
        
    	numberOfRoots(area);
    	double num2=area;
    	
    	for(int i=0;i<numOfRoots;i++){
        	boolean rootable=(Math.floor(Math.sqrt(num2))>1);
        	double root=Math.floor(Math.sqrt(num2));
        	if(rootable){
        		
        		int rootint=(int)root;
        		System.out.println("rootable "+num2);
        		Solution[i]=rootint*rootint;
        		num2=num2-root*root;
        	}else{
        		System.out.println("unrootable "+root);
        		Solution[i]=1;
        		num2=num2-1;
        	}
    	}
    	}
    	numOfRoots=0;
    	return Solution;
    	}
    	

    
    public static void numberOfRoots(int num){
    	double num2=num;
    	boolean rootable=(Math.floor(Math.sqrt(num2))>1);
    	if(rootable){
    		numOfRoots++;
    		numberOfRoots((int)Math.floor(Math.sqrt(num2)));
    	}else if(num>1){
    		numOfRoots++;
    		numberOfRoots(num-1);
    	}else if(num==1){
    		numOfRoots++;
    	}
    }
    public static void main(String[] args) {
		int[] Solution = answer(5);
	}
}