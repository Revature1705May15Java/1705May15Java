<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <display-name>ajax</display-name>
    <welcome-file-list>
        <welcome-file>ajax.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>GetTextServlet</servlet-name>
        <servlet-class>com.ex.servlets.AjaxGetTextServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetTextServlet</servlet-name>
        <url-pattern>/GetText</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetJsonServlet</servlet-name>
        <servlet-class>com.ex.servlets.AjaxGetJsonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetJsonServlet</servlet-name>
        <url-pattern>/GetJson</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetJacksonJsonServlet</servlet-name>
        <servlet-class>com.ex.servlets.AjaxGetJacksonJsonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetJacksonJsonServlet</servlet-name>
        <url-pattern>/GetJacksonJson</url-pattern>
    </servlet-mapping>
</web-app>