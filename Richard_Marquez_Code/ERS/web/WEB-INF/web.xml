<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>ERS</display-name>
    <welcome-file-list>
        <welcome-file>Home</welcome-file>
    </welcome-file-list>


    <servlet>
        <servlet-name>freemarker</servlet-name>
        <servlet-class>freemarker.ext.servlet.FreemarkerServlet</servlet-class>

        <!-- FreemarkerServlet settings: -->
        <init-param>
            <param-name>TemplatePath</param-name>
            <param-value>/</param-value>
        </init-param>
        <init-param>
            <param-name>NoCache</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>ContentType</param-name>
            <param-value>text/html; charset=UTF-8</param-value>
        </init-param>

        <!-- FreeMarker settings: -->
        <init-param>
            <param-name>template_update_delay</param-name>
            <param-value>0</param-value>
            <!-- 0 is for development only! Use higher value otherwise. -->
        </init-param>
        <init-param>
            <param-name>default_encoding</param-name>
            <param-value>ISO-8859-1</param-value>
            <!-- The encoding of the template files. -->
        </init-param>
        <init-param>
            <param-name>number_format</param-name>
            <param-value>0.##########</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>freemarker</servlet-name>
        <url-pattern>*.ftl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.revature.ers.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.revature.ers.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.revature.ers.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmployeeHomeServlet</servlet-name>
        <servlet-class>com.revature.ers.servlets.EmployeeHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeHomeServlet</servlet-name>
        <url-pattern>/EmployeeHome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManagerHomeServlet</servlet-name>
        <servlet-class>com.revature.ers.servlets.ManagerHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerHomeServlet</servlet-name>
        <url-pattern>/ManagerHome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewRequestServlet</servlet-name>
        <servlet-class>com.revature.ers.servlets.NewRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewRequestServlet</servlet-name>
        <url-pattern>/NewRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmployeeAccountServlet</servlet-name>
        <servlet-class>com.revature.ers.servlets.EmployeeAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeAccountServlet</servlet-name>
        <url-pattern>/EmployeeAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApproveRequestServlet</servlet-name>
        <servlet-class>com.revature.ers.servlets.ApproveRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApproveRequestServlet</servlet-name>
        <url-pattern>/ApproveRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DenyRequestServlet</servlet-name>
        <servlet-class>com.revature.ers.servlets.DenyRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DenyRequestServlet</servlet-name>
        <url-pattern>/DenyRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewUserServlet</servlet-name>
        <servlet-class>com.revature.ers.servlets.NewUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewUserServlet</servlet-name>
        <url-pattern>/NewUser</url-pattern>
    </servlet-mapping>
</web-app>