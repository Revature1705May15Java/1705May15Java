package p3;

public class ReverseString 
{
	public static void main(String[] args)
	{
		System.out.println(reverse("boa"));
	}
	
	//recursive call
	public static String reverse(String str)
	{
		int length = str.length(); //check string size 
		
		// if only one letter is left (from odd length strings), return it
		// no swap needed
		if(length == 1)	
			return str; 
		
		// if 2 letter left in split, swap 
		// add first to end, then cut off dupe first letter
		if(length == 2)
		{
			return (str.concat(str.substring(0,1))).substring(1);
		}
		
		str.substring(beginIndex, endIndex); 
		return null; 
	}
}
