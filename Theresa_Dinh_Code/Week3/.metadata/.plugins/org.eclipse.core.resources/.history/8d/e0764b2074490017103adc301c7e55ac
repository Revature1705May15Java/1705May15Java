package service;

import dao.ERSDao;
import pojos.Employee;

public class ErsService 
{
	ERSDao dao; 
	
	public ErsService()
	{
		super(); 
		dao = new ERSDao(); 
	}
	
	// retrieves user from their unique email login 
	public Employee getEmployee(Employee employee)
	{
		Employee temp = dao.getEmployee(employee.getEmail());
		if(temp != null)
		{
			return temp; 
		}
		return null; 
	}
}
