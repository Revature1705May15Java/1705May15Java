<?xml version="1.0" encoding="UTF-8"?>
<!-- default space for beans.xml. schema location is added to xml file and 
gives us context sensitive help inside our app. 
have wellformed valid xml . 
namespace acts like library for beans' properties 
that we can use to create and inject. -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<context:annotation-config/>
	<context:component-scan base-package="com.ex"/>
	
	<!-- stereotype annotations -->
	
	
</beans>
