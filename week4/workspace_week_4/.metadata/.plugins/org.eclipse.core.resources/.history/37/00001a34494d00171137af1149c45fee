  <script type="text/javascript">
  /*
  1. USA
	Define function getUSA()
	Find the html element that contains "USA".
	Print that element's contents.
	*/
	function getUSA(){
		var tags = document.getElementsByTagName("span");
		var search = "USA";
		var found;

		for (var i = 0; i < tags.length; i++) {
		  if (tags[i].textContent == search) {
		    found = tags[i];
		    window.alert(found + "    contents: " + found.textContent);
		    break;
		  }
		}
  	}
	/*
	2. Sales
	Define function getPeopleInSales()
	Print the names of all the people in the sales department.
	*/
	function getPeopleInSales(){
		var search2 = "Sales";
		var table = document.getElementById("empTable");
		var tr = table.getElementsByTagName("tr");
		document.write("<br>People In Sales Are: ");
		for (i = 0; i < tr.length; i++) {
			td = tr[i].getElementsByTagName("td")[0];
			td2 = tr[i].getElementsByTagName("td")[1];
			if(td2){
				if(td2.textContent == search2){
					document.write("<br>" + td.textContent);
				}
			}
		}
		document.write("<br>");
	}
	/*
	3. Click Here
	Define function getAnchorChildren()
	Find all anchor elements with a <span> child.
	Print the contents of <span>
	*/
	function getAnchorChildren(){
		var x = document.getElementById("spans").querySelectorAll("span");
		var text = "";
		for(i in x){
			if(x[i].innerHTML != undefined) {
				text += x[i].innerHTML + " ";
			}
		}
		document.write(text);
	}


	/*
	4. Hobbies
	Define function getHobbies()
	Find all checked options in the 'skills' select element.
	Print the value and the contents.
	*/
	function getHobbies(){
		var s = document.getElementsByName('skills')[0];
		var text = s.options[s.selectedIndex].text;
		window.alert("<br><br> Skills Selected: " + text);
	}

	/*
	5. Custom Attribute
	Define function getCustomAttribute()
	Find all elements with "data-customAttr" attribute
	Print the value of the attribute.
	Print the element that has the attribute.
	*/

	function getCustomAttribute(){
		var matchingElements = [];
		  var allElements = document.getElementsByTagName('*');
		  var num = 0;
		  for (var i = 0, n = allElements.length; i < n; i++)
		  {
		    if (allElements[i].getAttribute('data-customAttr') !== null)
		    {
		      matchingElements.push(allElements[i]);
		      num++;
		    }
		  }
		  
		  for(k = 0; k < num; k++) window.alert(matchingElements[k].getAttribute('data-customAttr'));
	}



	/*
	6. Sum Event
	NOTE: Write unobtrusive Javascript
	Regarding these elements:
		<input id="num1" class="nums" type="text"/>
		<input id="num2" class="nums" type="text"/>
		<h3>Sum: <span id="sum"></span></h3>
	Define onchange event handler.
	Add <input> element values.
	Put the sum in the <span> element.
	If values cannot be added, put "Cannot add" in the <span> element
	*/
	document.getElementById("num1").addEventListener("change", doChange);
	document.getElementById("num2").addEventListener("change", doChange);
	
	function doChange(){
		var num = parseInt(document.getElementById("num1").value);
		var num2 = parseInt(document.getElementById("num2").value);
		var total = num+num2;
		if(isNaN(total)) {
			document.getElementById("sum").innerHTML = "Cannot Add " + num + " + " + num2 + ".";
		} else {
			document.getElementById("sum").innerHTML = total;
		}
	};
	
	
