// is mouse over ryu?

var isHovered = falss;

$document.ready(function(){
	$('.ryu').mouseenter(function(){
			$('.ryu-still').hide();
			$('.ryu-ready').show();
			isHovered = true;
	}) //we don't have to add the selector again in the next one because we didn't add a semicolon here
	
	.mouseleave(function(){
			$('.ryu-still').show();
			$('.ryu-ready').hide();
			isHovered = false;
	})
});