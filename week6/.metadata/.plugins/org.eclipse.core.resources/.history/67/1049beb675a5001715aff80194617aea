import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

import com.ex.service.CustomerService;
import com.ex.service.CustomerServiceImpl;

public class Application {

	public static void main(String[] args) {
		
		ApplicationContext appContext = new ClassPathXmlApplicationContext("ApplicationContext.xml");
		
		CustomerServiceImpl service = (CustomerServiceImpl) appContext.getBean("CustomerService", CustomerService.class);
		//System.out.println(service.findAll().get(0).getFirstname());
		if(service.findAll() == null) System.out.println("Null...");
		else System.out.println(service.findAll().get(0));

	}
	
}
