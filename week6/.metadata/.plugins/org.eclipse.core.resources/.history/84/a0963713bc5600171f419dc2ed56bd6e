package com.ex.aop;

import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;
import java.time.LocalDateTime;

import org.aspectj.lang.annotation.After;
import org.aspectj.lang.annotation.Aspect;
import org.aspectj.lang.annotation.Before;
import org.springframework.stereotype.Component;

@Component
@Aspect
public class Logs {
	
	static String filename = "src/main/java/com/ex/aop/logs.txt";
	
	@Before("execution(* com.ex.repo.CustomerRepoImpl.* (..))")
	public void logRepoMethods(){
		LocalDateTime now =  LocalDateTime.now();
		write(now+" : "+ "Performing repooooo method \n");
		
	}
	@After("execution(* com.ex.repo.CustomerRepoImpl.* (..))")
	public void logRepoMethods(){
		LocalDateTime now =  LocalDateTime.now();
		write(now+" : "+ "Performing repooooo method \n");
		
	}
	static void write(String message){
		try(BufferedWriter bw = new BufferedWriter (new FileWriter(filename, true));){
			
			bw.write(message);
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	
	
	

}
