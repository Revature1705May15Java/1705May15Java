<body ng-app="calculatorApp" ng-controller="CalculatorCtrl">


		Num1:<input class="form-control" type="number" ng-model="number1" /></br>
		Num2:<input class="form-control" type="number" ng-model="number2" /></br>
		<button ng-click="add(num1,num2)">Add</button>
		<button ng-click="subtract(num1,num2)">Subtract</button>
		<button ng-click="multiply(num1,num2)">Multiply</button>
		<button ng-click="divide(num1,num2)">Divide</button>
	<table class="table-striped">
		<thead>
			<tr>
				<th>Num1</th>
				<th>Num2</th>
				<th>Operand</th>
				<th>Result</th>
		</thead>
		<tbody>
			<tr ng-repeat= "item in calculator.items">
				<td>{{item.num1}}</td>
				<td>{{item.num2}}</td>
				<td>{{item.operand}}</td>
				<td>{{item.result}}</td>
			</tr>
		</tbody>
	</table>


	<script>
var model = {
	items:[{
		num1:1,
		num2:2,
		operand:'Multiply',
		result:2
	}]
};

var calculatorApp = angular.module("calculatorApp",[]);

todoApp.controller("CalculatorCtrl",function($scope){
	$scope.calculator=model;
	
	$scope.multiply=function(number1,number2){
		$scope.calculator.items.unshift({
			num1:number1,
			num2:number2,
			operand:'Multiply',
			result:number1*number2
		})
	}
	

});

</script>
