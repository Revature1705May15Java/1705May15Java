<!--  The app -->
<body ng-app="todoApp" ng-controller="ToDoCtrl">
	<br>


	<input type="number" ng-model="num1" />
	<input type="number" ng-model="num2" />

	<input type="text" ng-model="actionText"/>
	<h1>{{num1}}</h1>
	<button ng-click="addNewItem(num1,num2)">Add</button>


	<table>
		<thead>
			<tr>
				<th>num1</th>
				<th>num2</th>
				<th>Operation</th>
				<th>Answer</th>

			</tr>
		</thead>
		<tbody>
			<tr ng-repeat="item in todo.items">
				<td>{{item.num1}}</td>
				<td>{{item.num2}}</td>
				<td>{{item.Operations}}</td>
				<td>{{item.done}}</td>

			</tr>

		</tbody>

	</table>

	<script>
    var model= {
        user : "UserName",
        items : [

					{num1 : 0,num2:0 ,Operations: "+", done : 0	}
					]
					};

					var todoApp = angular.module("todoApp", []);

					todoApp.controller("ToDoCtrl", function($scope) {
						$scope.todo = model;
						
						$scope.addNewItem = function(num1, num2) {
							var ans = num1+num2;
							$scope.todo.items.push({
								num1 : num1,
								num2 : num2,
								Operations: "+",
								done : ans
							});
						};
						
						$scope.subNewItem = function(num1, num2) {
							var ans = num1-num2;
							$scope.todo.items.push({
								num1 : num1,
								num2 : num2,
								Operations: "-",
								done : ans
							});
						};
						
						$scope.multNewItem = function(num1, num2) {
							var ans = num1+num2;
							$scope.todo.items.push({
								num1 : num1,
								num2 : num2,
								Operations: "*",
								done : ans
							});
						};
						
						$scope.addNewItem = function(num1, num2) {
							var ans = num1/num2;
							$scope.todo.items.push({
								num1 : num1,
								num2 : num2,
								Operations: "/",
								done : ans
							});
						};
						
						
					});
				</script>
