<body ng-controller="ToDoCtrl">
	<div>
		<input type="text" ng-model="num1" placeholder="first number..."/>
		<input type="text" ng-model="num2" placeholder="second number..."/>
		<button class="btn btn-primary" ng-click="addItems(num1, num2)">Submit</button>
		<button class="btn btn-primary" ng-click="subtractItems(num1, num2)">Submit</button>
		<button class="btn btn-primary" ng-click="multiplyItems(num1, num2)">Submit</button>
		<button class="btn btn-primary" ng-click="divideItems(num1, num2)">Submit</button>
	
		<h1>Calculator</h1>
		<p ng-hide="incompleteCount()==0">Items Remaining: {{ incompleteCount() }}</p>
		<table class="table">
		<thead>
			<tr>
				<th>Num 1</th>
				<th>Num 2</th>
				<th>Operation</th>
				<th>Result</th>
			</tr>
		<thead>
		<tbody>
			<tr ng-repeat="item in todo.items | checkedItems:showComplete | orderBy:'action'">
				<td>{{ item.first }}</td>
				<td>{{ item.second }}</td>
				<td>{{ item.action }}</td>
				<td>{{ item.result }}</td>
			</tr>
		</tbody>
		</table>
	</div>

	<script>
		var model = {
			user : "Lei Raion",
		};
		
			var todoApp = angular.module("myApp", []);
			
			todoApp.filter("checkedItems", function(){
				return function(items, showComplete){
					var resultArr = [];
					angular.forEach(items, function(item){
						if(item.done == false || showComplete == true){
							resultArr.push(item);	
						}
					});
					return resultArr;
				}
			});
			
			todoApp.controller("ToDoCtrl", function($scope){
			$scope.todo = model
			
			$scope.incompleteCount = function(){
				var count = 0;
				angular.forEach($scope.todo.items, function(item){
					if(!item.done) {
						count++;
					}
				});
				return count;
			};
			
			$scope.addItem = function(num1, num2){
				if(actionText && actionText.length > 0){
					$scope.todo.items.push({
						first: num1, second: num2, action: "add", result: (num1+num2)
					})
				}
			};
			$scope.subtractItem = function(num1, num2){
				if(actionText && actionText.length > 0){
					$scope.todo.items.push({
						action: actionText, done: false
					})
				}
			};
			$scope.multiplyItem = function(num1, num2){
				if(actionText && actionText.length > 0){
					$scope.todo.items.push({
						action: actionText, done: false
					})
				}
			};
			$scope.divideItem = function(num1, num2){
				if(actionText && actionText.length > 0){
					$scope.todo.items.push({
						action: actionText, done: false
					})
				}
			};
		});
			
	
	</script>

