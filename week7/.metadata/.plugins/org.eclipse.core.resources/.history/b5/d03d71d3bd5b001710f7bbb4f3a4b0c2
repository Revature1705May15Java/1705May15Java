<body ng-app="calculatorApp" ng-controller="CalculatorCtrl">


		Num1:<input class="form-control" type="text" ng-model="num1" /></br>
		Num2:<input class="form-control" type="text" ng-model="num2" /></br>
		<input type="text" ng-model="actionText"/>
		<button ng-click="add(actionText)">Add</button>
		<button ng-click="subtract(actionText)">Subtract</button>
		<button ng-click="multiply(actionText)">Multiply</button>
		<button ng-click="divide(actionText)">Divide</button>
	<table class="table-striped">
		<thead>
			<tr>
				<th>Num1</th>
				<th>Num2</th>
				<th>Operand</th>
				<th>Result</th>
		</thead>
		<tbody>
			<tr ng-repeat= "item in calculator.items">
				<td>{{item.num1}}</td>
				<td>{{item.num2}}</td>
				<td>{{item.operand}}</td>
				<td>{{item.result}}</td>
			</tr>
		</tbody>
	</table>


	<script>
var model = {
	items:[{
		
	}]
};

var calculatorApp = angular.module("calculatorApp",[]);
calculatorApp.filter("checkedItems",function(){
	return function(items,showComplete)
	{
		var resultArr=[];
		angular.forEach(items,function(item){
			if(item.done==false||showComplete==true){
			resultArr.unshift(item);
			}
		})
		return resultArr;
	}
});

todoApp.controller("CalculatorCtrl",function($scope){
	$scope.calculator=model;
	
	$scope.incompleteCount = function(){
		var count = 0;
		angular.forEach($scope.todo.items,function(item){
			if(!item.done){
				count++;
			}
		});
		return count;
	};
	
	$scope.multiply=function(actionText1,actionText2){
		$scope.calculator.items.unshift({
			num1:actionText1,
			num2:actionText2,
			operand:'Multiply',
			result:actionText1*actionText2
		})
	}
});

</script>
